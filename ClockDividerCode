-- Clock Divider code --

LIBRARY IEEE;
USE IEEE.STD_LOGIC_1164.ALL;
USE IEEE.NUMERIC_STD.ALL;

ENTITY ClockDivider IS
    GENERIC ( MaxCount : INTEGER := 50000000 ); -- This basically changes the frequency from 50MHz to 1Hz
    PORT(
        clk : in  STD_LOGIC;
        reset : in  STD_LOGIC;
        freq  : out STD_LOGIC
    );
END ClockDivider;

architecture Behavioral of clock_divider is
    signal count : integer range 0 to MAX_COUNT;
begin
    process(clk, reset)
    begin
        if reset = '1' then
            count <= 0;
            tick_1hz <= '0';
        elsif rising_edge(clk) then
            if count = MAX_COUNT - 1 then
                count <= 0;
                tick_1hz <= '1'; -- Generate 1-cycle pulse
            else
                count <= count + 1;
                tick_1hz <= '0';
            end if;
        end if;
    end process;
end Behavioral;
